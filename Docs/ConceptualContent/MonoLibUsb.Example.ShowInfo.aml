    <procedure>
      <title>MonoLibUsb Show Info: Console Application Description</title>
      <steps class="ordered">
         <step>
          <content>
            <para>
            Initializes the usb context.
    	</para>
          </content>
        </step>
        <step>
          <content>
            <para>
    	Writes the device descriptor for all known usb devices to console output.
    	</para>
          </content>
        </step>

        <step>
          <content>
            <para>
            Exits the usb context.
    	</para>
          </content>
        </step>
      </steps>
    </procedure>
