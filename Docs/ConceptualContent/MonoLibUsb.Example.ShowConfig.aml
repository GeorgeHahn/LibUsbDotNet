    <procedure>
      <title>MonoLibUsb Show Config: Console Application Description</title>
      <steps class="ordered">
        <step>
          <content>
            <para>
              Initializes the usb context.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Finds all device profiles matching the MyVidPidPredicate.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Writes the VendorID and ProductID to console output.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Loops through all of the devices configurations.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Writes the bConfigurationValue to console output.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Interate through the InterfaceList.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Interate through the AltInterfaceList.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Writes the bInterfaceNumber and bAlternateSetting to console output.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Interates through the EndpointList.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Writes the bEndpointAddress, EndpointType, and wMaxPacketSize to console output.
            </para>
          </content>
        </step>
        <step>
          <content>
            <para>
              Closes profile list and exits the usb context.
            </para>
          </content>
        </step>
      </steps>
    </procedure>
